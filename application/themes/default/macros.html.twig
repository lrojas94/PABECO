
{# Macro for styling Blocks in BlocksSection #}
{% macro blockStyle(block_id,color) %}
  <style>
    #{{ block_id }} .panel {
      border-color: {{ color }};
    }
    #{{ block_id }} .panel-default>.panel-heading {
      background-color: {{ color }};
      border-color: {{ color }};
    }
  </style>
{% endmacro %}

{% macro loadCSS(url)%}
  <link href="{{ base_url(url) }}" rel="stylesheet">
{% endmacro %}

{% macro loadJS(url)%}
  <script src="{{ base_url(url) }}"></script>
{% endmacro %}
